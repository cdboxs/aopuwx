/* pages/workinfo/index.wxss */
page{
  padding-bottom:200rpx;
}
.iconfont {
  font-family: "iconfont" !important;
  font-size: 60rpx;
  color: #8a8a8a;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.workinfo {
  width: 90%;
  margin: 0 auto;
  box-sizing: border-box;
}

.workinfo view {
  color: #8a8a8a;
  font-size: 29rpx;
  margin: 20rpx 0;
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-items: center;
}

.workinfo view text:nth-of-type(1) {
  width: 45%;
}

.workinfo view text:nth-of-type(2) {
  width: 46%;
}

.map {
  color: #2cabe3;
}

.sign {
  width: 100%;
  height: 100rpx;
  color: #fff;
  font-size: 36rpx;
  background: #2f323e;
  line-height: 100rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
}

.showModal {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
}

.mask {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 5;
  background: #333;
  opacity: 0.5;
}

.content {
  width: 96%;
  height: 400rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-flow: row wrap;
  align-items: flex-end;
  position: fixed;
  left: 2%;
  top: 25%;
  z-index: 10;
  overflow: hidden;
}

.content text {
  display: block;
  width: 100%;
  padding: 20rpx 0;
  font-size: 33rpx;
  color: #666;
  text-align: center;
  border-bottom: 1px solid #ddd;
}

.content textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  font-size: 30rpx;
  color: #666;
  box-sizing: border-box;
}
.workbtn{
  width:100%;
  display: flex;
  justify-content: space-around;
  box-sizing: border-box;
}
.workbtn view{
  width:25%;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  border-radius: 20rpx;
  background:#2cabe2;
}
.workbtn view:nth-of-type(2){
  background: #b57d06;
}
.btngroup {
  width: 100%;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  align-items: flex-end;
}

.btngroup button {
  width: 50%;
  border-radius: 0;
}

.btngroup button:first-child {
  color: #fff;
  background: #2cabe2;
}
