/* pages/login/index.wxss */
.iconfont {
  font-family:"iconfont" !important;
  font-size:54rpx;
  color:#999;
  font-style:normal;
 -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.login{
  width:90%;
  margin: 0 auto;
}
.login_logo{
  margin:100rpx auto;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
}
.login_logo image{
  width:166rpx;
  height:146rpx;
  margin-bottom:50rpx;
  
}
.login_logo text{
  display: block;
  width:100%;
  color:#333;
  text-align: center;
  font-size: 34rpx;
}


.login_form view{
  padding:25rpx 0;
  border-bottom:1px solid #ddd;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-items: center;
}

.login_form view input{
  width: 90%;
  padding:0 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}
.loginTip{
  padding:30rpx 0;
  display: block;
  width:100%;
  color:#088b0b;
  font-size: 28rpx;
  text-align: right;
 
}
.login_form button::after{
border:none;
}
.login_form button{
  width:100%;
  height: 88rpx;
  line-height: 88rpx;
  color:#fff;
  border-radius: 38rpx;
  background:#088b0b;
  margin-top:38rpx;
}



















