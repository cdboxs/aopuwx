/* pages/workMap/index.wxss */

.signMap {
  width: 100%;
}

.signMap .mapTip {
  width: 100%;
  height: 110rpx;
  padding: 0 0 0 20rpx;
  background: #fff;
  display: flex;
  font-size: 26rpx;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ddd;
}

.signMap .mapTip cover-view:nth-of-type(2) {
  color: red;
}

.signBtn {
  width: 360rpx;
  height: 90rpx;
  color: #fff;
  position: fixed;
  bottom: 86rpx;
  border-radius: 50rpx;
  background: #2cabe3;
  font-size: 35rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
  align-items: center;
  padding:0 30rpx;
  box-sizing: border-box;
  box-shadow: 0 0 2px 2px #2cabe3;
}
.myPosition{
  width:44px;
  height:44px;
  position: fixed;bottom: 86rpx;
}