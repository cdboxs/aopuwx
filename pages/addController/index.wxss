/* pages/addController/index.wxss */
page{
  background:#f3f4f6;
}
.addController{
  display: block;
  width:100%;
}
.cInfo,.mantainInfo{
  width:100%;
  padding:0 10rpx;
  margin:0 0 20rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-items: center;
    background: #fff;
}

.cInfo .c_title text,.mantainInfo .c_title text{
  display: block;
  padding-left:15rpx;
  font-size: 34rpx;
 border-left:7rpx solid #009b40;
}
.cInfo view,.mantainInfo view{
  width: 100%;
  padding:20rpx 0;
  display: flex;
  flex-flow: row;
  align-items: center;
  border-bottom:1px solid #f3f4f6;
}
.mantainInfo view:last-child{
 border-bottom: none;
}

.cInfo view label,.mantainInfo view label{
  width: 200rpx;
  font-size: 28rpx;
  color: #a2a2a2;
}
.cInfo view input,.mantainInfo view input{
  font-size: 30rpx;
  color: #a2a2a2;
}

.addController .addCsend{
  width: 100%;
  background:#2f313e;color:#fff;
  border-radius: 0;color:#fff;

  }











